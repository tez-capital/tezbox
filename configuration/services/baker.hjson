{
    executable: octez-baker-${PROTOCOL_SHORT}
    args: [
        run
        remotely
        --votefile
        ${VOTE_FILE}
    ]
    environment: {
        HOME: ${HOME}
        TEZOS_LOG: "* -> info"
    }
    restart: always
    restart_delay: 20
    restart_max_retries: 0 # unlimited
    stop_timeout: 300
    user: ${USER}
    healthcheck: {
        name: baker
        action: restart
        delay: 15
        interval: 15
        retries: 1
    }
}