{
    executable: octez-node
    args: [
        run
        --rpc-addr=0.0.0.0:8732
        --rpc-addr=0.0.0.0:20000
		--allow-all-rpc=0.0.0.0
        --metadata-size-limit=unlimited
		--synchronisation-threshold=0
		--no-bootstrap-peers
		--peer=127.0.0.1:9732
		--private-mode
    ]
    environment: {
        HOME: ${HOME}
        TEZOS_LOG: "* -> info"
    }
    restart: always
    restart_delay: 20
    stop_timeout: 300
    user: ${USER}
}